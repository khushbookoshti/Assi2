<%-include ('../partials/header.ejs');%>
<%-include ('../partials/main_nav.ejs');%>

<!--content for the Add page-->
<div class = "container">
    <div class = "row">
        <div class ="offset-md-3 col-md-6">
            <style>
                Body{
                    background-image: url('./Assets/Images/background.jpg');
                    background-repeat: no-repeat;
                    background-size: cover;
                    background-attachment: fixed; 
                }
                </style>
        <h4>Contacts</h4>
        <form class = "form" method="POST">      
            <div class ="form group">
                <label for="NameTextField">NAME</label>
                <input type="text" class="form control"
                id="NameTextField"
                placeholder="Please enter the Name"
                name="Name"
                value="<%=book.Name %>"
                required>
            </div>

            <div class ="form group">
                <label for="NumberTextField">NUMBER</label>
                <input type="text" class="form control"
                id="NumberTextField"
                placeholder="Please enter the Number"
                name="Number" 
                value="<%=book.Number %>"
                required>
            </div>

            <div class ="form group">
                <label for="EmailTextField">E-MAIL</label>
                <input type="text" class="form control"
                id="EmailTextField"
                placeholder="Please enter the Email"
                name="Email" 
                value="<%=book.Email %>"
                required>
            </div>

            <button class = "btn btn-primary" type="submit"><i class ="fas fa-edit"></i>submit</button>
            <a href='/bookList' class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a>  
        
        </form>
        </div>
        </div>
    </div>


